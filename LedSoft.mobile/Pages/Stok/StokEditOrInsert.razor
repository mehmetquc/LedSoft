                {
                    isLoading = true;
                    stoktanimBarkods = await HttpClient.GetServiceResponseAsync<List<StoktanimBarkodDTO>>($"{ConnectionManager.apiConnection}api/Barkod/GetStokBarkodsById?StokId=" + StokId, token, true);
                    isLoading = false;
            
                }
            }
        }
